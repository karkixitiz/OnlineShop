@page
@model Shop.UI.Pages.Admin.StockModel
@{
}
<div id="app">
    <div class="columns">
        <div class="column is-3">
                <table class="table">
                    <tr v-for="product in products" @@click="selectProduct(product)">
                        <td>{{product.description}}</td>
                        <td>{{product.qty}}</td>
                    </tr>
                </table>
         </div>
            <div class="column is-6" v-if="selectedProduct">
                <table class="table">
                    <tr v-for="(stock,index) in selectedProduct.stock">
                        <td><input class="input" v-model="stock.description" /></td>
                        <td><input class="input" v-model="stock.qty" /></td>
                        <td><a class="button is-danger" @@click="deleteStock(stock.id,index)">Delete</a></td>
                    </tr>
                </table>
                <a class ="button is-warning" @@click="updateStock">
                    Update Product
                </a>
            </div>
                <div class="column is-3" v-if="selectedProduct">
                    <div class="field">
                        <label class="label">New Stock</label>
                        <div class="control">
                            <input class="input" v-model="newStock.description" />
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Quantity</label>
                        <div class="control">
                            <input class="input" v-model="newStock.qty" />
                        </div>
                    </div>
                    <button class="button is-success" @@click="addStock">Add</button>

                </div>

            </div>
        </div>
</div>
@section scripts{

    <script src="~/js/admin/stock.js"></script>
}
